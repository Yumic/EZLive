<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout_all">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView_photo"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:id="@+id/textView_name"
            android:textColor="@color/colorTextDark"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:id="@+id/textView_sex"
            android:layout_weight="1"
            android:textColor="@color/colorTextDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年龄"
            android:layout_weight="1"
            android:id="@+id/textView_age" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout_group1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="期望室友性别："
            android:id="@+id/textView_wishsex_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不限"
            android:id="@+id/textView_hopesex"
            android:textColor="@color/colorTextDark"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout_group2">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="对舍友期望："
            android:id="@+id/textView_wishcontent_title"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="干净整洁，有好的作息习惯，不要随便带人回来过夜"
            android:id="@+id/textView_wishcontent"
            android:textColor="@color/colorTextDark"/>

    </LinearLayout>


</LinearLayout>